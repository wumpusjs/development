{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@events/*": ["events/*"],
            "@utils/*": ["utils/*"],
            "@event": ["utils/core/event.ts"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
